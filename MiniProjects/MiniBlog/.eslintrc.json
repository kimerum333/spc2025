{
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",                // console.log 사용 시 경고
      "semi": ["error", "always"],          // 세미콜론(;) 항상 붙이기
      "quotes": ["error", "single"],        // 문자열은 작은따옴표(') 사용
      "indent": ["error", 2],               // 들여쓰기 2칸
      "no-unused-vars": ["warn"],           // 사용하지 않는 변수 경고
      "eqeqeq": ["error", "always"],        // == 대신 항상 === 사용
      "no-var": "error",                    // var 금지 (let/const만 사용)
      "prefer-const": "warn"                // 변경 안 되는 변수는 const 추천
    }
  }
  